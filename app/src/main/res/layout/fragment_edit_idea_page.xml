<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zarwanhashem.ideatrackr.EditIdeaPageActivityFragment"
    android:id="@+id/edit_idea_relative_layout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Title"
        android:ems="10"
        android:id="@+id/ideaTitle"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ideaDetails"
        android:layout_below="@+id/ideaTitle"
        android:layout_alignLeft="@+id/ideaTitle"
        android:layout_alignStart="@+id/ideaTitle"
        android:layout_marginTop="60dp"
        android:text="@string/default_descrip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_edit_bttn"
        android:id="@+id/saveIdeaButton"
        android:onClick="onSaveIdeaButtonClick"
        android:layout_above="@+id/deleteIdeaButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_idea_bttn"
        android:id="@+id/deleteIdeaButton"
        android:onClick="onDeleteIdeaButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/saveIdeaButton"
        android:layout_alignEnd="@+id/saveIdeaButton" />
</RelativeLayout>
